#!/bin/sh
':' //; exec "`command -v nodejs || command -v node`" "$0"

var server = require('../lib/instant-markdown-d');

server.start(8090, 'gfm', function(){
  var initialMarkup = '';
  process.stdin.on('data', function(chunk){
    initialMarkup += chunk;
  });
  process.stdin.on('end', function(){
    server.convert(initialMarkup);
  });
  process.stdin.resume();
});
